	collide	TRUE

	children USE Tree1

}


Collision {

	collide	TRUE

	children USE Tree2

}


Collision {

	collide	TRUE

	children USE Tree3

}


#Definition of touch via speficic touch script js function 

DEF big_tree TouchSensor {
}

DEF yellow_color Script {
  eventIn      SFBool	isActive
  eventOut     SFColor	color
  field        SFColor	activeColor	0 0.8 0
  field        SFColor	nactiveColor 0 0.2 0
  url	"javascript:

// Handler for event isActive of type SFBool

function isActive (kvalue){
 if (kvalue==true)
     color=activeColor;
 else
	 color=nactiveColor;
}
"
}

#Definition of touch events via inheritance of tree object big_tree31 by material

ROUTE big_tree.isOver TO yellow_color.isActive

#Definition of specific color for touch event of tree object big_tree31 by material

ROUTE yellow_color.color TO big_tree31.emissiveColor





